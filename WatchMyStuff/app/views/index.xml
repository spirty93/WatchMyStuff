<Alloy>
	<TabGroup >
        <Tab title="Request">
            <Window title="Request the watch" backgroundColor="grey" layout="vertical">
            	<Label left="0">For how long?</Label>
            	<TextField
            		id="requested_minutes"
        		 	width="Titanium.UI.FILL"
        		 	backgroundColor="white"
        		 	borderRadius="5"
        		 	color="black">
    		 	</TextField>
            	<Label left="0">Describe your location</Label>
            	<TextArea
            		 id="watch_description"
            		 height="60"
            		 width="Titanium.UI.FILL"
            		 borderRadius="5" 
            		 borderColor="black"
            		 backgroundColor="white"
            		 color="black">
        		 </TextArea>
        		 <Button title="Upload Image"></Button>
        		 <Button title="Get My Stuff Watched" bottom="20" onClick="doClick"></Button>
            </Window>
        </Tab>
        <Tab title="Watch">
            <Window title="Watch Stuff">
            	<TableView id="table">
		            <TableViewSection id="WatchList" headerTitle="Awaiting Watches" >
		            </TableViewSection>
		        </TableView>
            </Window>
        </Tab>
        <Tab title="History">
            <Window title="Watch History" backgroundColor="white">
            	<TableView id="tableHist">
		            <TableViewSection id="section" headerTitle="Current">
		                <TableViewRow title="The watch"/>
		                <TableViewRow title="Some other watch"/>
		            </TableViewSection>
		            <TableViewSection id="section" headerTitle="Completed Watches">
		                <TableViewRow title="Watch little anoying dog"/>
		                <TableViewRow title="Watch "/>
		            </TableViewSection>
		        </TableView>
			</Window>
        </Tab>
     </TabGroup>
</Alloy>
